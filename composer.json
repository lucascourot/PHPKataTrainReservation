{
  "name": "lucascourot/kata-train-reservation",
  "description": "Kata: reserve train seats",
  "type": "project",
  "require": {
    "php": "^7.1.3",
    "guzzlehttp/guzzle": "^6.3",
    "sensio/framework-extra-bundle": "^5.1",
    "symfony/console": "^4.0",
    "symfony/flex": "^1.0",
    "symfony/framework-bundle": "^4.0",
    "symfony/psr-http-message-bridge": "^1.0",
    "symfony/yaml": "^4.0",
    "zendframework/zend-diactoros": "^1.6"
  },
  "require-dev": {
    "behat/behat": "^3.4",
    "friendsofphp/php-cs-fixer": "^2.8",
    "infection/infection": "^0.8.1",
    "mockery/mockery": "^1.0",
    "php-coveralls/php-coveralls": "^2.0",
    "phpunit/phpunit": "^6.1",
    "symfony/dotenv": "^4.0"
  },
  "autoload": {
    "psr-4": {
      "TrainReservation\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "TrainReservationTest\\": "tests/"
    }
  },
  "config": {
    "platform": {
      "php": "7.1.3"
    },
    "preferred-install": {
      "*": "dist"
    },
    "bin-dir": "bin/",
    "sort-packages": true
  },
  "license": "MIT",
  "scripts": {
    "auto-scripts": {
      "cache:clear": "symfony-cmd",
      "assets:install --symlink --relative %PUBLIC_DIR%": "symfony-cmd"
    }
  }
}
